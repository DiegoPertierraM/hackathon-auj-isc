generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  name     String
  password String
  email    String   @unique
  phone    String?  @unique
  company  String?
  tasks    Task[]
  created  DateTime @default(now())
  updated  DateTime @updatedAt
  taskId   String
}

model Participant {
  id      String   @id @default(uuid())
  name    String
  email   String   @unique
  ticket  Int
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  status      Status
  dueDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User[]
}

model Opportunity {
  id          String   @id @default(uuid())
  title       String
  description String
  status      Status   @default(new)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  new
  inProgress
  closed
}
