generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  password String
  email    String     @unique
  phone    String?    @unique
  company  String?
  tasks    Task[]
  created  DateTime   @default(now())
  updated  DateTime   @updatedAt
  UserTask UserTask[]
}

model Participant {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
  ticket  Int
  created DateTime @default(now())
  updated DateTime @updatedAt
}

model Task {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  status      Status
  dueDate     DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User[]
  UserTask    UserTask[]
}

model Opportunity {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      Status   @default(new)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  new
  inProgress
  closed
}

model UserTask {
  userId Int
  taskId Int

  user User @relation(fields: [userId], references: [id])
  task Task @relation(fields: [taskId], references: [id])

  @@id([userId, taskId])
}
